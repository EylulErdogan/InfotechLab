@model IList<InfotechLab.Entities.User>

@{
	Layout = "_Layout";
}
<!-- services-area -->
<section class="services-area delivery-bg inner-help-bg pt-110 pb-70">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-7 col-lg-10">
				<div class="s-section-title text-center mb-60">
					<h2>how we help you</h2>
					<p>
						Express delivery is an innovative service is effective logistics solution for the delivery of
						small cargo. This service
						is useful for companies various.
					</p>
				</div>
			</div>
		</div>
		<div class="services-wrapper">
			<div class="row">

				@foreach (var expert in Model)
				{
					<div class="col-lg-4 col-md-6">
						<div class="s-single-services mb-50">
							<div class="services-thumb mb-25">
								<a href="#"><img src="/img/images/s_services_img01.jpg" alt="img"></a>
							</div>
							<div class="s-services-content">
								<h6>@expert.FirstName  @expert.LastName</h6>
								<p>
									@expert.Description
								</p>
								@Html.ActionLink("Teklif Al","CreateBid","CategoryList", new {expertId = expert.Id, categoryId = ViewData["CategoryId"]},new {@class = "btn red-btn"})
							</div>
						</div>
					</div>

				}

			</div>
		</div>
	</div>
</section>
<!-- services-area-end -->